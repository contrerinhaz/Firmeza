<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmeza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="app-layout">
            <!-- Sidebar -->
            <aside class="app-sidebar">
                <div class="sidebar-header">
                    <div class="brand-logo">
                        <i class="fas fa-hammer text-primary"></i>
                        <span>Firmeza</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <a asp-controller="Home" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                    <a asp-controller="Users" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i> Usuarios
                    </a>
                    <a asp-controller="Products" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")">
                        <i class="fas fa-box"></i> Productos
                    </a>
                    <a asp-controller="Sale" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Sale" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i> Ventas
                    </a>
                </nav>

                <div class="sidebar-footer">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 32px; height: 32px; font-size: 0.8rem;">
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        </div>
                        <div style="flex: 1; min-width: 0;">
                            <div class="text-truncate fw-medium text-white" style="font-size: 0.9rem;">@User.Identity.Name</div>
                            <div class="text-muted" style="font-size: 0.75rem;">Administrador</div>
                        </div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline w-100 btn-sm" style="background: rgba(255,255,255,0.05); color: white; border: 1px solid rgba(255,255,255,0.1);">
                            <i class="fas fa-sign-out-alt me-2"></i> Salir
                        </button>
                    </form>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="app-main">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <!-- Login Layout (Centered) -->
        <div class="login-wrapper">
            @RenderBody()
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>