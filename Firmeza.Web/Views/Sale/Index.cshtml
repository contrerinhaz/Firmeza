@model Firmeza.Web.Models.PaginatedList<Firmeza.Web.Models.Entities.Sale>

@{
    ViewData["Title"] = "Ventas";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
        <h1 class="h3 mb-1">Ventas</h1>
        <p class="text-muted m-0">Historial de transacciones realizadas.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <div class="btn-group">
            <a asp-controller="Excel" asp-action="ExportSales" class="btn btn-outline-secondary"
                title="Exportar a Excel">
                <i class="fas fa-download"></i> Excel
            </a>
            <a asp-controller="Reports" asp-action="ExportSalesPdf" class="btn btn-outline-secondary"
                title="Exportar a PDF">
                <i class="fas fa-file-pdf text-danger"></i> PDF
            </a>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Venta
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Fecha</th>
                        <th>Cliente</th>
                        <th>Productos</th>
                        <th>IVA</th>
                        <th>Total</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="fas fa-cash-register fa-3x mb-3 opacity-25"></i>
                                    <p class="mb-0">No hay ventas registradas.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="text-muted small ps-4">@item.Date.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-medium">@(item.User?.FullName ?? "Cliente General")</td>
                                <td>
                                    @if (item.SaleDetails != null && item.SaleDetails.Any())
                                    {
                                        <div class="d-flex flex-column gap-1">
                                            @foreach (var detail in item.SaleDetails.Take(2))
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-caret-right me-1"></i>
                                                    @(detail.Product?.Name ?? "Producto") <span
                                                        class="fw-bold">x@(detail.Quantity)</span>
                                                </small>
                                            }
                                            @if (item.SaleDetails.Count > 2)
                                            {
                                                <small class="text-primary fst-italic">+@(item.SaleDetails.Count - 2) más...</small>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-muted">@item.Vat.ToString("C", new System.Globalization.CultureInfo("es-CO"))
                                </td>
                                <td class="fw-bold text-success">@item.Total.ToString("C", new
                                                                System.Globalization.CultureInfo("es-CO"))</td>
                        <td class="text-end pe-4">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"
                                title="Ver Detalles">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer bg-light">
            <nav aria-label="Paginación de ventas">
                <ul class="pagination pagination-sm mb-0 justify-content-center">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </a>
                    </li>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2">
                <small class="text-muted">
                    Página @Model.PageIndex de @Model.TotalPages (@Model.TotalCount ventas en total)
                </small>
            </div>
        </div>
    }
</div>