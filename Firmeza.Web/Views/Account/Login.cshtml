@model Firmeza.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-wrapper">
    <div class="login-card shadow-lg rounded-3 p-5">
        <div class="text-center mb-4">
            <div class="d-inline-flex align-items-center justify-content-center bg-primary bg-opacity-10 rounded-circle p-3 mb-4">
                <i class="fas fa-hammer text-primary fa-3x"></i>
            </div>
            <h2 class="fw-bold">Bienvenido</h2>
            <p class="text-muted">Ingresa a tu cuenta para continuar</p>
            <p class="text-muted small">Accede a tu ferretería con facilidad</p>
        </div>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 text-sm mb-3" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="nombre@ejemplo.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="d-grid gap-2 mb-4">
                <button type="submit" class="btn btn-primary py-2">
                    Iniciar Sesión <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>
            <div class="text-center mt-3">
                <p class="text-muted small mb-0">
                    ¿No tienes una cuenta? <a href="#" class="text-primary fw-semibold text-decoration-none">Contacta al administrador</a>
                </p>
            </div>
        </form>
    </div>
</div>
