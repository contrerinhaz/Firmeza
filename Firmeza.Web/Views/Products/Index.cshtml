@model IEnumerable<Firmeza.Web.Models.Entities.Product>

@{
    ViewData["Title"] = "Productos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Productos</h1>
        <p class="text-secondary m-0">Gestiona el inventario de tu ferretería.</p>
    </div>
    <div class="d-flex gap-2">
        <!-- Excel Upload -->
        <form asp-controller="Excel" asp-action="Upload" method="post" enctype="multipart/form-data" id="excelForm">
            <input type="file" name="file" id="excelInput" class="d-none" accept=".xlsx,.xls" />
            <button type="button" class="btn btn-outline" onclick="document.getElementById('excelInput').click()">
                <i class="fas fa-file-excel text-success"></i> Importar
            </button>
        </form>

        <div class="btn-group">
            <a asp-controller="Excel" asp-action="ExportProducts" class="btn btn-outline">
                <i class="fas fa-download"></i> Excel
            </a>
            <a asp-controller="Reports" asp-action="ExportProductsPdf" class="btn btn-outline">
                <i class="fas fa-file-pdf text-danger"></i> PDF
            </a>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Producto
        </a>
    </div>
</div>

<div class="card">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                    <th>Fecha Registro</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fas fa-box-open fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">No hay productos registrados.</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-medium">@Html.DisplayFor(m => item.Name)</td>
                            <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("es-CO"))</td>
                            <td>
                                <span class="badge @(item.Quantity > 10 ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger") rounded-pill px-3">
                                    @Html.DisplayFor(m => item.Quantity)
                                </span>
                            </td>
                            <td>@Html.DisplayFor(m => item.Category)</td>
                            <td class="text-muted small">@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline text-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        const excelInput = document.getElementById("excelInput");
        const excelForm = document.getElementById("excelForm");

        excelInput.addEventListener("change", function () {
            if (this.files.length > 0) {
                excelForm.submit();
            }
        });
    </script>
}
