@model Firmeza.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Dashboard</h1>
        <p class="text-secondary m-0">Resumen general de tu ferretería.</p>
    </div>
    <div class="text-end">
        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
            <i class="fas fa-calendar me-2"></i> @DateTime.Now.ToString("dd MMM, yyyy")
        </span>
    </div>
</div>

<!-- Stats Grid -->
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="stat-card shadow-sm rounded-3 p-4 text-center">
            <div class="stat-icon bg-primary text-white rounded-circle mb-3">
                <i class="fas fa-box fa-2x"></i>
            </div>
            <h3>@Model.TotalProducts</h3>
            <p class="text-muted">Total Productos</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card shadow-sm rounded-3 p-4 text-center">
            <div class="stat-icon bg-success text-white rounded-circle mb-3">
                <i class="fas fa-shopping-cart fa-2x"></i>
            </div>
            <h3>@Model.TotalSalesThisMonth</h3>
            <p class="text-muted">Ventas del Mes</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card shadow-sm rounded-3 p-4 text-center">
            <div class="stat-icon bg-warning text-white rounded-circle mb-3">
                <i class="fas fa-users fa-2x"></i>
            </div>
            <h3>@Model.TotalRevenueThisMonth.ToString("C")</h3>
            <p class="text-muted">Ingresos del Mes</p>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">Acciones Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="@Url.Action("Create", "Products")"
                            class="btn btn-outline w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                            <div class="mb-3 text-primary bg-primary bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-plus fa-lg"></i>
                            </div>
                            <span>Nuevo Producto</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Create", "Sale")"
                            class="btn btn-outline w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                            <div class="mb-3 text-success bg-success bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-cash-register fa-lg"></i>
                            </div>
                            <span>Nueva Venta</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index", "Products")"
                            class="btn btn-outline w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                            <div class="mb-3 text-secondary bg-secondary bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-boxes fa-lg"></i>
                            </div>
                            <span>Inventario</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index", "Sale")"
                            class="btn btn-outline w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                            <div class="mb-3 text-info bg-info bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-chart-line fa-lg"></i>
                            </div>
                            <span>Reportes</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">Estado del Sistema</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled m-0">
                    <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                        <i class="fas fa-check-circle text-success me-3 fa-lg"></i>
                        <div>
                            <h6 class="mb-0">Servidor</h6>
                            <small class="text-muted">Operativo</small>
                        </div>
                    </li>
                    <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                        <i class="fas fa-database text-primary me-3 fa-lg"></i>
                        <div>
                            <h6 class="mb-0">Base de Datos</h6>
                            <small class="text-muted">Conectada</small>
                        </div>
                    </li>
                    <li class="d-flex align-items-center">
                        <i class="fas fa-shield-alt text-warning me-3 fa-lg"></i>
                        <div>
                            <h6 class="mb-0">Seguridad</h6>
                            <small class="text-muted">Activa</small>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>